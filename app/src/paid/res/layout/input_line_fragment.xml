<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/apk/res/android ">

    <androidx.cardview.widget.CardView
        android:layout_width="357dp"
        android:layout_height="364dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="307dp"
            android:layout_height="289dp"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mesuares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_mesuares"
                    android:layout_width="250dp"
                    android:layout_height="43dp"
                    android:animateLayoutChanges="true"
                    android:dropDownSelector="@android:drawable/btn_dropdown"
                    android:foreground="?android:attr/textColorHighlight"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/change_field_but"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#F1A7CC"
                    android:ems="5"
                    android:longClickable="false"
                    android:text="↑↓"
                    android:textColor="#E91E63" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_firstConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_firstConversion"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:editable="true"
                    android:ems="5"
                    android:focusable="false"
                    android:hint="From"
                    android:inputType="number"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/fcopy"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:background="#F1A7CC"
                    android:ems="2"
                    android:longClickable="false"
                    android:text="c"
                    android:textColor="#E91E63" />

                <Spinner
                    android:id="@+id/spinner_firstConversion"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_secondConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_secondConversion"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:ems="5"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="To"
                    android:inputType="number"
                    android:longClickable="false" />

                <Button
                    android:id="@+id/scopy"
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:background="#F1A7CC"
                    android:ems="2"
                    android:longClickable="false"
                    android:text="c"
                    android:textColor="#E91E63" />

                <Spinner
                    android:id="@+id/spinner_secondConversion"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>