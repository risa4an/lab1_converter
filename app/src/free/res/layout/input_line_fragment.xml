<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="337dp"
            android:layout_height="176dp"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_mesuares"
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:animateLayoutChanges="true"
                android:dropDownSelector="@android:drawable/btn_dropdown"
                android:foreground="?android:attr/textColorHighlight"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/ll_firstConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_firstConversion"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:editable="true"
                    android:ems="5"
                    android:focusable="false"
                    android:hint="From"
                    android:inputType="number"
                    android:longClickable="false" />

                <Spinner
                    android:id="@+id/spinner_firstConversion"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_secondConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_secondConversion"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:ems="5"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="To"
                    android:inputType="number"
                    android:longClickable="false" />

                <Spinner
                    android:id="@+id/spinner_secondConversion"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>