<?xml version="1.0" encoding="utf-8"?>

<TableLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <TableRow
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn7"
            style="@style/KeyboardButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/KeyboardButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/KeyboardButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="9" />

        <Button
            android:id="@+id/btndelete"
            style="@style/KeyboardButton"
            android:layout_height="wrap_content"
            android:onClick="additionButton"
            android:text="←" />
    </TableRow>

    <TableRow
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn4"
            style="@style/KeyboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/KeyboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/KeyboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="6" />

        <Button
            android:id="@+id/btnc"
            style="@style/KeyboardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="additionButton"
            android:text="С" />
    </TableRow>

    <TableRow
        android:layout_width="309dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn1"
            style="@style/KeyboardButton"
            android:layout_height="wrap_content"
            android:text="1" />


        <Button
            android:id="@+id/btn2"
            style="@style/KeyboardButton"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/KeyboardButton"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="3" />

    </TableRow>

    <TableRow
        android:layout_width="321dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn0"
            style="@style/KeyboardButton"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/btn000"
            style="@style/KeyboardButton"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="000" />

        <Button
            android:id="@+id/btndot"
            style="@style/KeyboardButton"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="." />

    </TableRow>
</TableLayout>